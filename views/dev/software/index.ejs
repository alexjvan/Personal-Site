<% var title = "Home"; %>
<!DOCTYPE html>
<html>
	<link rel="stylesheet" href="/css/software/index.css" type="text/css" />
	<% include ../../globals/head %>
	<body>
		<% include ../../globals/header %>
		<div id="body">
			<div class="comingsoon">
				<div class="title" style="padding-top: 10%;">
					Software
				</div>
				<div class="subtitle">
					Coming soon...
				</div>
				<div class="more">
					<div class="subtitle" style="font-weight: bold;">
						While I work on this page, feel free to look at my GitHub repos.
					</div>
					<div id="repos">

					</div>
				</div>
				<script>
					var repos;
					$(document).ready(function() {
						gitRepos();
					});

					function gitRepos() {
						var xhttp = new XMLHttpRequest();
						xhttp.onreadystatechange = function() {
							if (this.readyState == 4 && this.status == 200) {
								repos = JSON.parse(this.responseText);
								for(var i = 0; i < repos.length; i++){
									var current = repos[i];
									// name
									// svn_url
									// description
									// language
									$('#repos').html($('#repos').html() + '<div class="repoitem"><a class="ri-clickable" href="'+current['svn_url']+'"><div class="ri-c-title">'+current['name']+'</div><div class="ri-c-desc">'+current['description']+'</div><div class="ri-c-lang">'+current['language']+'</div></a></div>');
								}
							}
						};
						xhttp.open("GET", "https://api.github.com/users/alexjvan/repos", true);
						xhttp.send();
					}
				</script>
			</div>
		</div>
		<% include ../../globals/footer %>
	</body>
</html>
